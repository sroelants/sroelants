title: Sam Roelants
---
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="https://fonts.googleapis.com/css?family=Rubik:400,500,700&display=swap"   rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">

    <link type="text/css" href="/assets/css/style.css" rel="stylesheet">
    <link type="text/css" href="/assets/css/prism.css" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.5.1/katex.min.css">


    <title>{{ title }}</title>
  </head>
  <body>
    <div class="content">
      {% block header %}
      <header>
        <div class="name">
          <div id="sam">Sam</div>
          <div id="roelants">Roelants</div>
        </div>
        <div class="contact">
          <dl>
            <div>
              <dt><img src="/assets/img/envelope_icon.svg" class="glyph"></img></dt>
              <dd class="address">165 Avenue Michel-Croz, 74400 Chamonix, France
              </dd>
            </div>
            <div>
              <dt><img src="/assets/img/at_icon.svg" class="glyph"></img></dt>
              <dd class="email">
                <a href="mailto: roelants.sam@gmail.com" target="_blank">
                  roelants.sam@gmail.com
                </a>
              </dd>
            </div>
            <div>
              <dt><img src="/assets/img/phone_icon.svg" class="glyph"></img></dt>
              <dd class="phone">
                <a href="tel:+33 656 704 307" target="_blank">+33 656 704 307
                </a>
              </dd>
            </div>
            <div>
              <dt><img src="/assets/img/github_icon.svg" class="glyph"></img></dt>
              <dd class="github">
                <a href="http://www.github.com/sroelants" target="_blank">
                  github.com/sroelants
                </a>
              </dd>
            </div>
          </ul>
        </div>
      </header>
      {% endblock %}
      {% block navbar %}
      <nav>
        <ul>
          <li {% if section == "blog" %} class="active" {% endif %}>
            <span><a href="/">Blog</a></span>
          </li>
          <li {% if section == "about" %} class="active" {% endif %}>
            <span><a href="/about">About</a></span>
          </li>
          <li {% if section == "resume" %} class="active" {% endif %}>
            <span><a href="/resume/">Resume</a></span>
          </li>
        </ul>
      </nav>
      {% endblock %}
      <div class="main">
        {{ content | safe }}
      </div>
    </div>
  </body>
</html>
