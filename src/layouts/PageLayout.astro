---
import Header from "../components/Header.astro";
import { DarkModeProvider, DarkModeToggle} from "../components/DarkModeToggle.tsx";
import "../styles/global.css";
---

<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="The personal blog of Sam Roelants." />
    <meta name="author" content="Sam Roelants" />
  </head>
  <body>
    <DarkModeProvider client:load>
      <div class={`
          lg:text-lg
          px-4
          min-w-screen min-h-screen 
          flex justify-center 
          bg-slate-50 text-slate-900 
          dark:text-slate-300 dark:bg-slate-900
          transition duration-150 ease-linear
      `}>
        <div class="w-[650px] py-20 relative">
          <div class="absolute right-0"><DarkModeToggle client:load /></div>
          <Header />
          <div class="py-20">
            <slot />
          </div>
        </div>
      </div>
    </DarkModeProvider>
  </body>
</html>
